<Window x:Class="StateMachine.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:StateMachine.ViewModels"
        xmlns:local="clr-namespace:StateMachine.Views"
        mc:Ignorable="d"
        Title="State Machine Demo"
        Height="750"
        Width="1050">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section Container: Sprite and Diagram -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sprite Animation Display -->
            <Border Grid.Column="0"
                    Background="#FAFAFA"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    Padding="10"
                    Margin="0,0,20,0"
                    VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock Text="Current State: "
                               FontWeight="Bold"
                               Margin="0,0,0,5"
                               HorizontalAlignment="Center">
                        <Run Text="{Binding CurrentStateName, Mode=OneWay}"
                                FontSize="18"
                                Foreground="#0066CC"/>
                    </TextBlock>

                    <Image Source="{Binding CurrentSpriteFrame}"
                           Width="192" Height="192"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- State Machine Visualization (now with clickable states) -->
            <Border Grid.Column="1"
                    Background="#FAFAFA"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                            Text="State Machine Diagram - Click a state to transition"
                            FontWeight="Bold"
                            Margin="10,10,0,5"/>

                    <Canvas Grid.Row="1"
                            x:Name="StateDiagramCanvas"
                            Background="#FCFCFC"
                            Width="400"
                            Height="250"
                            Margin="10">
                        <!-- Idle State Box (Clickable) -->
                        <Border Canvas.Left="100"
                                Canvas.Top="100"
                                Width="80"
                                Height="50"
                                BorderBrush="{Binding IdleStateBorderBrush}"
                                Background="{Binding IdleStateBackground}"
                                BorderThickness="2"
                                CornerRadius="6"
                                Cursor="Hand"
                                MouseDown="OnStateBoxClicked"
                                Tag="Idle">
                            <TextBlock Text="Idle"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"/>
                        </Border>

                        <!-- LookUp State Box (Clickable) -->
                        <Border Canvas.Left="200"
                                Canvas.Top="30"
                                Width="80"
                                Height="50"
                                BorderBrush="{Binding LookUpStateBorderBrush}"
                                Background="{Binding LookUpStateBackground}"
                                BorderThickness="2"
                                CornerRadius="6"
                                Cursor="Hand"
                                MouseDown="OnStateBoxClicked"
                                Tag="LookUp">
                            <TextBlock Text="Look Up"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"/>
                        </Border>

                        <!-- Walking State Box (Clickable) -->
                        <Border Canvas.Left="200"
                                Canvas.Top="100"
                                Width="80"
                                Height="50"
                                BorderBrush="{Binding WalkingStateBorderBrush}"
                                Background="{Binding WalkingStateBackground}"
                                BorderThickness="2"
                                CornerRadius="6"
                                Cursor="Hand"
                                MouseDown="OnStateBoxClicked"
                                Tag="Walking">
                            <TextBlock Text="Walking"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"/>
                        </Border>

                        <!-- Running State Box (Clickable) -->
                        <Border Canvas.Left="300"
                                Canvas.Top="100"
                                Width="80"
                                Height="50"
                                BorderBrush="{Binding RunningStateBorderBrush}"
                                Background="{Binding RunningStateBackground}"
                                BorderThickness="2"
                                CornerRadius="6"
                                Cursor="Hand"
                                MouseDown="OnStateBoxClicked"
                                Tag="Running">
                            <TextBlock Text="Running"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"/>
                        </Border>
                                
                        <!-- Ducking State Box (Clickable) -->
                        <Border Canvas.Left="100"
                                Canvas.Top="170"
                                Width="80"
                                Height="50"
                                BorderBrush="{Binding DuckingStateBorderBrush}"
                                Background="{Binding DuckingStateBackground}"
                                BorderThickness="2"
                                CornerRadius="6"
                                Cursor="Hand"
                                MouseDown="OnStateBoxClicked"
                                Tag="Ducking">
                            <TextBlock Text="Ducking"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"/>
                        </Border>

                        <!-- Updated Connectors -->
                        <!-- Idle to Walking -->
                        <Line X1="180"
                              Y1="125"
                              X2="200"
                              Y2="125"
                              Stroke="#888888"
                              StrokeThickness="2"/>
                        
                        <!-- Walking to Running -->
                        <Line X1="280"
                              Y1="125"
                              X2="300"
                              Y2="125"
                              Stroke="#888888"
                              StrokeThickness="2"/>
                        
                        <!-- Running to Idle (bottom) -->
                        <Line X1="300"
                              Y1="150"
                              X2="100"
                              Y2="150"
                              Stroke="#888888"
                              StrokeThickness="2"/>
                                
                        <!-- Idle to LookUp -->
                        <Line X1="140"
                              Y1="100"
                              X2="200"
                              Y2="60"
                              Stroke="#888888"
                              StrokeThickness="2"/>
                        
                        <!-- LookUp to Idle -->
                        <Line X1="200"
                              Y1="60"
                              X2="140"
                              Y2="100"
                              Stroke="#888888"
                              StrokeThickness="2"
                              StrokeDashArray="4,2"/>
                                
                        <!-- Idle to Ducking -->
                        <Line X1="140"
                              Y1="150"
                              X2="140"
                              Y2="170"
                              Stroke="#888888"
                              StrokeThickness="2"/>
                        
                        <!-- Ducking to Idle -->
                        <Line X1="140"
                              Y1="170"
                              X2="140"
                              Y2="150"
                              Stroke="#888888"
                              StrokeThickness="2"
                              StrokeDashArray="4,2"/>

                        <!-- Last Transition Indicator -->
                        <Path x:Name="TransitionPath"
                              Stroke="Red"
                              StrokeThickness="3"
                              Opacity="{Binding TransitionIndicatorOpacity}"
                              Data="{Binding LastTransitionPathData}"/>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Section -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Log Display -->
            <Border Grid.Column="0"
                    Background="#FFFFFF"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="State Machine Log" 
                               FontWeight="Bold" 
                               Margin="10,10,0,5"/>
                    
                    <ScrollViewer Grid.Row="1"
                                  Margin="10,0,10,10"
                                  VerticalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding LogText, Mode=OneWay}"
                                 IsReadOnly="True"
                                 FontFamily="Consolas"
                                 Background="#F5F5F5"
                                 BorderThickness="0"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- State Machine Details and Controls Panel -->
            <Border Grid.Column="1"
                    Background="#FFFFFF"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="State Machine Details" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    
                    <Grid Grid.Row="1" 
                          Background="#F0F0F0" 
                          Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                Grid.Column="0"
                                Text="Current State:"
                                Margin="10,10,5,5"
                                FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding CurrentStateName, Mode=OneWay}"
                                Margin="0,10,10,5"/>

                        <TextBlock Grid.Row="1"
                                Grid.Column="0"
                                Text="Previous State:"
                                Margin="10,5,5,5"
                                FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding PreviousStateName}"
                                Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="State Count:"
                                Margin="10,5,5,5"
                                FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding StateCount}"
                                Margin="0,5,10,5"/>

                        <TextBlock Grid.Row="3"
                                Grid.Column="0"
                                Text="Time in State:"
                                Margin="10,5,5,10"
                                FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3"
                                Grid.Column="1"
                                Text="{Binding TimeInCurrentState}"
                                Margin="0,5,10,10"/>
                    </Grid>
                    
                    <!-- Controls Column -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="Controls" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <Button Content="Update Current State"
                                Command="{Binding UpdateStateCommand}"
                                Padding="15,10"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"/>
                        
                        <Button Content="Simulate Activity" 
                                Command="{Binding SimulateActivityCommand}"
                                Padding="15,10"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"/>

                        <Button Content="Clear Log" 
                                Command="{Binding ClearLogCommand}"
                                Padding="15,10"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
